---
import { Icon } from "astro-icon/components";

const { beer, brewer, year, untappd, beeradvocate} = Astro.props;
---
<li class="flex w-full bg-white p-2 py-3 border-b border-b-gray-300 justify-between">

    <!--Calendar Component -->
    <div class="flex">
        <div class="flex items-center select-none">
            <div class="aspect-square relative z-0">
                <Icon name="calendar" size={28} class="mb-1 "/>
                <div class="absolute p-0.5 inset-0 flex justify-center items-center z-10 font-semibold">{year % 100}</div>
            </div>
        </div>
    
        <div class="ml-8 flex flex-col ">
            <div class="text-md font-medium">{beer}</div>
            <div class="text-sm text-gray-500">{brewer}</div>
        </div>
    </div>
    
    <div class="flex gap-4 items-center mr-2">
        {beeradvocate && 
            <a href={untappd} class="rounded-md shadow-md shadow-gray-700">
                <img src="img/untappd-logo.png" class="rounded-md size-7" >
            </a>
        }
        {beeradvocate && 
            <a href={beeradvocate} class="rounded-md shadow-md shadow-gray-700">
                <img src="img/beeradvocate-logo.png" class="rounded-md size-7" >
            </a>
        }
    </div>

</li>