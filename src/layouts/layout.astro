---
import Navigation from '@components/navigation.astro';
import '../styles/global.css';
interface Props {
  title: string;
}

const { title } = Astro.props;
---
<html lang="en">
    <head>
        <title>{title}</title>
        <script>import "htmx.org";</script>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
    </head>
    <body class="bg-green-200 min-h-screen repeating-beer-bg">
        <Navigation />
        <div class="p-2">
            <slot />
        </div>
    </body>
</html>